<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.0.xsd
">

    <!-- 引入属性文件 -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>file:E:\java\resource\config-dev.properties</value>
                <value>file:E:\java\resource\config-task.properties</value>
            </list>
        </property>
    </bean>

    <import resource="file:E:\java\resource\spring\spring-jdbcTemplate.xml"/>
    <import resource="file:E:\java\resource\spring\spring-quartz.xml"/>

    <!-- 自动扫描dao和service包(自动注入) -->
    <context:component-scan base-package="com.yiniu"/>

</beans>